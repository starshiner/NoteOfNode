extends ../layout

block content
	.container
		ol.breadcrumb
			li
				a(href="/list") 列表页
			li.active 修改
		.text-center
			form.form-horizontal(method="post",action="/note/new")
				.form-group
					input(type="hidden",name="note[_id]",value="#{note._id}")
					input.form-control(type="text",name="note[title]",value="#{note.title}")
					<br />
					input.form-control(type="text",name="note[author]",value="#{note.author}")
					<br />
					.input-group.date.form_date(data-date="",data-date-format="yyyy-mm-dd",data-link-field="dtp_input2",data-link-format="yyyy-mm-dd")
						input.form-control(size="16",type="text",name="note[date]",value="#{note.date}",readonly="readonly")
						span.input-group-addon
							span.glyphicon.glyphicon-remove
						span.input-group-addon
							span.glyphicon.glyphicon-calendar
					<br />
					textarea.form-control(rows="3",name="note[content]") #{note.content}
					<br />
					button.btn.btn-default(type="submit") 提交